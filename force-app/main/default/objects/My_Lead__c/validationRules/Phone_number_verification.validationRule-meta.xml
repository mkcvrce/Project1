<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_number_verification</fullName>
    <active>true</active>
    <description>Phone number should be equal to 10 digit.</description>
    <errorConditionFormula>(LEN( Phone__c )  &lt;&gt; 10)</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>The Phone number entered is invalid</errorMessage>
</ValidationRule>
